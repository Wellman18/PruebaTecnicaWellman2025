@model PruebaTecnicaWebApp.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formCreate" method="post" >
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombrePuesto" class="control-label"></label>
                <input asp-for="NombrePuesto" class="form-control" />
                <span asp-validation-for="NombrePuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoIdentificacion" class="control-label"></label>
                <select asp-for="IdTipoIdentificacion" class="form-control" asp-items="ViewBag.TiposIdentificacion">
                    <option value="">-- Seleccione un tipo de identificación --</option>
                </select>
                <span asp-validation-for="IdTipoIdentificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroIdentificacion" class="control-label"></label>
                <input asp-for="NumeroIdentificacion" class="form-control" />
                <span asp-validation-for="NumeroIdentificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#formCreate").submit(function (e) {
                e.preventDefault(); // Evita que el form se envíe normalmente

                var token = $('input[name="__RequestVerificationToken"]').val(); // AntiForgeryToken

                var empleado = {
                    IdEmpleado: 0,
                    Nombre: $("#Nombre").val(),
                    Apellido: $("#Apellido").val(),
                    FechaIngreso: $("#FechaIngreso").val(),
                    NombrePuesto: $("#NombrePuesto").val(),
                    IdTipoIdentificacion: $("#IdTipoIdentificacion").val(),
                    NumeroIdentificacion: $("#NumeroIdentificacion").val(),
                    Identificacion: null
                };

                $.ajax({
                    url: '@Url.Action("Create", "Empleado")', // Llama a tu controller
                    type: "POST",
                    headers: {
                        "RequestVerificationToken": token // Necesario por [ValidateAntiForgeryToken]
                    },
                    contentType: "application/json",
                    data: JSON.stringify(empleado),
                    success: function (result) {
                        // Redirigir al index si todo salió bien
                        window.location.href = '@Url.Action("Index", "Empleado")';
                    },
                    error: function (xhr, status, error) {
                        alert("Error al crear el empleado: " + error);
                    }
                });
            });
        });
    </script>
}
