@model IEnumerable<PruebaTecnicaWebApp.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Empleados</h1>
    <a asp-action="Create" class="btn btn-primary" id="btnCreate"><i class="fa-solid fa-plus me-2"></i>Nuevo Empleado</a>
</div>




<form id="formBuscar" >
    <p>
        Buscar: <input type="text" id="buscar" name="buscar" class="form-text" placeholder="Buscar No. Identificacion"/>
        <button type="submit" class="btn btn-sm btn-dark"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
    </p>
</form>
<table class="table table-striped table-hover table-sm table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoIdentificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroIdentificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdEmpleado">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#formBuscar").submit(function (e) {
                e.preventDefault(); 

                var valor = $("#buscar").val();

                window.location.href = '/Empleado/Index?buscar=' + encodeURIComponent(valor);
            });
        });
    </script>
}

